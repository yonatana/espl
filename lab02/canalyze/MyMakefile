# TODO: add rule for *.o
canalyze.o: canalyze.c
namelist.o: namelist.c namelist.h
fgetname.o: fgetname.c fgetname.h
testnl.o: testnl.c
testfgn.o: testfgn.c

clean:
	rm -f *.o  namelist fgetname testnl testfgn
